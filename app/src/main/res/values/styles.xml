<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeGreen" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkGreen</item>
        <item name="android:textColor">@color/colorPrimaryGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
    </style>
    <style name="ThemeBlack" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryDarkGrey</item>
        <item name="colorButtonNormal">@color/colorPrimaryBlack</item>
        <item name="android:textColor">@color/colorPrimaryDarkGrey</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
    </style>
    <style name="ThemeBlue" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlue</item>
        <item name="android:textColor">@color/colorPrimaryBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>
</resources>
