<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/lanSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/lanSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/styleSpinner"/>

    <Button
        android:id="@+id/lanBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="123dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lanSpinner"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Spinner
        android:id="@+id/styleSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/styleSpinner"
        app:layout_constraintBottom_toTopOf="@+id/lanBut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lanSpinner" />
</androidx.constraintlayout.widget.ConstraintLayout>